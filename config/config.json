{

  "data": {
    "file_name": "shakespeare.txt",
    "url_path": "https://storage.googleapis.com/download.tensorflow.org/data/shakespeare.txt",
    "seq_len": 50,
    "train_split" : 0.9
  },

  "model": {
      "num_layers": 1,
      "num_heads": 4,
      "d_model": 128,
      "dff": 256,
      "maximum_position_encoding_baseline": 65,
      "maximum_position_encoding_smc": "None"
  },

  "smc": {
    "num_particles": 10,
    "noise_encoder": "False",
    "noise_SMC_layer": "True",
    "sigma" : 0.05
  },

  "optim": {
      "BATCH_SIZE": 256,
      "learning_rate": 0.001,
      "EPOCHS": 30
  },

   "task": {
      "data_type": "nlp",
      "task_type": "classification",
      "task": "char-LM"
  }

}